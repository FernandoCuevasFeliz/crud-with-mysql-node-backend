{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES5", "ES6"],
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "Node",
    "types": ["node", "./src/@types"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
